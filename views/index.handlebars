<h1>Welcome to Burger <i>Queue</i>n!</h1>
<h2 class="subtitle"><i>Try all the burgers!</i></h2>

<div class="container">
  <div class="col-1 col">
  <h2>Add a Burger!</h2>
  <form class="create-form">

    <div class="form-group">
      <h4><label for="bg">Burger Name:</label></h4>
      <input type="text" id="bg" name="name">
    </div>
{{!-- 
    <div class="form-group">
      <h4><label for="eaten">Eaten?</label></h4>
      <h4><input type="radio" name="eaten" value="1" checked> Yes!</h4>
      <h4><input type="radio" name="eaten" value="0"> No!</h4>
    </div> --}}

    <button type="submit">Add Burger</button>
  </form>
</div>

<div class="col-2 col">
  <h2>Burgers I want to try!</h2>

  <ul>
    {{#each burgers}}
    {{#unless eaten}}
    {{> burgers/burger-block eat=true}}
    {{/unless}}
    {{/each}}
  </ul>
</div>

<div class="col-3 col">
  <h2>Burgers I've eaten!</h2>

  <ul>
    {{#each burgers}}
    {{#if eaten}}
    {{> burgers/burger-block eat=false}}
    {{/if}}
    {{/each}}
  </ul>
  
</div>
</div>

